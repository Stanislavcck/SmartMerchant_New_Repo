@{
    var activePage = ViewData["ActivePage"] as string ?? "";
}

<aside class="lg:w-72 shrink-0">
    <div class="glass-card p-6 sticky top-24">
        <div class="flex items-center space-x-3 mb-10 px-2">
            <div class="w-10 h-10 lime-bg rounded-lg flex items-center justify-center text-black font-black">L</div>
            <div class="font-black oswald uppercase text-xl">Dashboard</div>
        </div>

        <nav class="space-y-1">
            <a asp-page="/Admin/Main" class="sidebar-link @(activePage == "main" ? "active" : "")">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
                Overview
            </a>
            <a asp-page="/Admin/Invoices" class="sidebar-link @(activePage == "invoices" ? "active" : "")">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                All Invoices
            </a>
            <a asp-page="/Admin/Merchant" class="sidebar-link @(activePage == "merchant" ? "active" : "")">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                Merchant Settings
            </a>
            <a asp-page="/Admin/User" class="sidebar-link @(activePage == "user" ? "active" : "")">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                User Settings
            </a>
            <a asp-page="/Admin/Card" class="sidebar-link @(activePage == "cards" ? "active" : "") bg-white/5 border border-white/10 hover:border-lime-primary/50 text-white">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/></svg>
                [CARDS]
            </a>
        </nav>
        
        <div class="mt-20 px-2">
            <a asp-page="/Index" class="text-xs font-black text-gray-600 hover:text-red-400 uppercase tracking-widest flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
                <span>Logout Session</span>
            </a>
        </div>
    </div>
</aside>

